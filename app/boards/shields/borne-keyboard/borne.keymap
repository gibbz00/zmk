	keymap {
		compatible = "zmk,keymap";

		// TEMP: placeholder until nordic letters are functional
		default_layer {
			bindings = <
				&kp Q &kp W &kp E &kp R &kp T &kp Y &kp U &kp I &kp O &kp P 
