		lowered_layer {
			bindings = <
				&kp EXCLAMATION &kp AT_SIGN &kp HASH &kp DOLLAR &kp AMPERSAND &none &kp PERIOD &kp COMMA &none &none
				&kp ESC &kp BSPC &kp TAB &kp RET &none &kp LEFT_ARROW &kp DOWN_ARROW &kp UP_ARROW &kp RIGHT_ARROW &none
				&kp QUESTION &kp GRAVE &kp SINGLE_QUOTE &kp DOUBLE_QUOTES &kp TILDE &none &kp COLON &kp SEMICOLON &out OUT_TOG &bt BT_CLR
